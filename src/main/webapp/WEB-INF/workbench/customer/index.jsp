			for (var i = 0; i <data.length ; i++) {
				$('#create-customerOwner').append("<option value="+data[i].id+">"+data[i].name+"</option>");
			}
		}
	});

	$('#saveCustomer').click(function () {
		var form = $('#form').serialize();
